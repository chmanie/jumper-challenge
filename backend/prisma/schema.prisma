// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  address               String  @id // Rename to address
  leaderboardEntries    LeaderboardEntry[]
}

model Token {
  address               String // Not single id anymore, rename to address
  chainId               Int
  name                  String?
  symbol                String?
  decimals              Int?
  logo                  String?
  tokenBalances         TokenBalance[]

  @@id([chainId, address]) // To not have duplication (combination as primary key)
  @@index([chainId])
}

// Add TokenBalance model
model TokenBalance {
    id                  Int     @id @default(autoincrement())
    chainId             Int
    tokenAddress        String
    token               Token   @relation(fields: [chainId, tokenAddress], references: [chainId, address])
    userAddress         String
    balance             BigInt
    updatedAt           DateTime @updatedAt

    @@unique([chainId, tokenAddress, userAddress])
    @@index([chainId])
    @@index([userAddress])
}

model LeaderboardEntry {
    id                  Int     @id @default(autoincrement()) // Use Int and autoincrement
    chainId             Int
    userId              String
    user                User    @relation(fields: [userId], references: [address])
    tokenCount          Int     @default(0) // Add default value

    @@unique([userId, chainId])
}
